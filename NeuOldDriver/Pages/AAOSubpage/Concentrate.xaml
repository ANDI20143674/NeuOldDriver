        <Button Content="开始专注" HorizontalAlignment="Left" Margin="576,626,0,0" VerticalAlignment="Top" Height="48" Width="127" RenderTransformOrigin="0.504,0.15" Click="Button_Click" FontFamily="Comic Sans MS" FontSize="24" Opacity="0.7" />


